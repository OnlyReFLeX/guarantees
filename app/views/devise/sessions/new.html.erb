
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<h2 class="new_user">Войти</h2>


    <%= f.label :email, "Email", class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Эл.Почта" %>


    <%= f.label :password, "Пароль", class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Пароль" %>

  <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Запомнить меня" %>
          </div>
  <% end -%>


  <div class="actions">
    <%= f.submit "Войти", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %><br>
