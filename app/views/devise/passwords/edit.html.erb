<div class="reset_password">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

  <h3 class="new_user">Изменение пароля</h3>


    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

      <% if @minimum_password_length %>
        <em>(минимум <%= @minimum_password_length %> символов)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: 'Новый пароль' %>

      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Подтверждение пароля' %>


    <div class="actions">
      <%= f.submit "Поменять пароль", class: "btn btn-primary" %> <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>







