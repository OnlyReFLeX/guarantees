<div class="row">
  <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <div class="table-responsive">
        <table class="table table-hover calls">
          <thead>
            <tr>
              <th><%= sortable "id", "#" %></th>
              <th><%= sortable "date", "Дата звонка" %></th>
              <th><%= sortable "username", "Имя" %></th>
              <th><%= sortable "phone", "Телефон" %></th>
              <th><%= sortable "adress", "Адрес" %></th>
              <th><%= sortable "boiler", "Котел" %></th>
              <th><%= sortable "error", "Неисправность" %></th>
              <th><%= sortable "master", "Мастер" %></th>
              <th><%= sortable "created_at", "Создание записи" %></th>
              <th><%= sortable "success", "Статус" %></th>
              <th><%= sortable "guarantee", "Г" %></th>
              <% if current_user.admin? %>
              <th></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @calls.each do |call| %>
              <tr>
                <td><%= call.id %></td>
                <td><%= call.date.strftime("%d.%m.%Y") %></td>
                <td><%= link_to "#{call.username}", call_path(call) %></a></td>
                <td><%= call.phone %></td>
                <td ><%= call.adress %></td>
                <td><%= call.boiler %></td>
                <td><%= call.error %></td>
                <td><%= call.master %></td>
                <td><%= call.created_at.strftime("%d.%m.%Y %H:%M") %></td>
                <td><%= success_check(call.success) %></td>
                <td><%= call.guarantee %></td>
                <% if current_user.admin? %>
                  <td><%= link_to '', admin_call_path(call), method: :delete, class: "fa fa-trash",data: { confirm: "Вы уверены что хотите удалить вызов #{call.username}?"}, style: 'text-decoration:none' %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="container">
          <%= will_paginate @calls, renderer: 'BootstrapPaginationHelper::LinkRenderer' %>
        </div>
      </div>
    </div>
  <div class="col-sm-1"></div>
</div>
