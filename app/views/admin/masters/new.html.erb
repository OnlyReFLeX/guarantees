<div class="container">
  <div class="row">
      <div class="col-sm-6">
      <h3>Добавить мастера</h3>
      <%= render 'shared/errors', resource: @master %>
      <%= form_for [:admin, @master], html: {class: "form-group"}  do |f| %>
            <%= f.label :name, "Мастер" %>
            <%= f.text_field :name, class: "form-control" %>
            <br /><%= f.submit "Добавить", class: "btn btn-primary" %>
      <% end %>
  <% if @masters.size > 0 %>
      <table class="table toble-responsive">
        <thead>
          <th>Существующие мастера</th>
          <th></th>
        </thead>
        <tbody>
          <%= render @masters %>
        </tbody>
      </table>
      <div class="container">
        <%= will_paginate @masters, renderer: 'MaterializePaginationHelper::LinkRenderer' %>
      </div>
    <% end %>
      </div>
  </div>
</div>
