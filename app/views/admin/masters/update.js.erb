<% if @master.errors.present? %>
  $.smallBox({
    title : "Ошибка",
    content : "<i class='fa fa-times'></i> <i><%= @master.errors.full_messages.join('<br>') %></i>",
    color : "#C46A69",
    iconSmall : "fa fa-times fa-2x fadeInRight animated",
    timeout : 4000
  });
<% else %>
  $('#master_title_<%= @master.id %>').parents('tr').replaceWith('<%= j render @master %>');
  $(".master-errors_<%= @master.id %>").remove()
<%end%>
