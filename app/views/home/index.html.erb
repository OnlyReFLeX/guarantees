<div class="row center">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Вызовы</span>
        <p>Зарегистрированых вызовов: <%= Call.count %>.</p>
      </div>
      <div class="card-action">
        <%= link_to 'Перейти', calls_path %>
      </div>
    </div>

    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Мастеры</span>
        <p>Рабочих в мастерской: <%= Master.count %>.</p>
      </div>
      <div class="card-action">
        <%= link_to 'Перейти', new_admin_master_path %>
      </div>
    </div>
  </div>
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Гарантийные котлы</span>
        <p>Оформлено гарантий: <%= Warranty.count %>.</p>
      </div>
      <div class="card-action">
        <%= link_to 'Перейти', warranties_path %>
      </div>
    </div>

    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Марки</span>
        <p>Фирмы котлов зарегистированных: <%= Boiler.count %>.</p>
      </div>
      <div class="card-action">
        <%= link_to 'Перейти', new_admin_boiler_path %>
      </div>
    </div>
  </div>
</div>
