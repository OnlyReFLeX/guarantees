<br>
<%= link_to 'Создать нового пользователя', new_admin_user_path, class: 'waves-effect waves-light btn green' %>

<table class="striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Email</th>
      <th>Пользователь</th>
      <th>Роль</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.type %></td>
        <td><%= link_to 'Редактировать', edit_admin_user_path(user), class: 'waves-effect waves-light btn' %></td>
        <td><%= link_to "Удалить", admin_user_path(user), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'waves-effect waves-light btn red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
