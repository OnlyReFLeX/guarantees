<%= form_for [:admin, @warranty], html: {class: "form-group"}  do |f| %>

  <%= f.label :boiler, "Производитель*" %>
  <%= f.collection_select :boiler, Boiler.order(:name), :name , :name, { include_blank: true }, class: "form-control" %>

  <%= f.label :model, "Модель*" %>
  <%= f.text_field :model, class: "form-control" %>

  <%= f.label :name, "Фамилия Имя владельца*" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :adress, "Адрес установленного котла*" %>
  <%= f.text_field :adress, class: "form-control" %>

  <%= f.label :phone, "Телефон*" %>
  <%= f.text_field :phone, class: "form-control" %>

  <%= f.label :serial, "Серийный номер котла*" %>
  <%= f.text_field :serial, class: "form-control" %>

  <%= f.label :datebuyed, "Дата покупки котла*" %>
  <%= f.text_field :datebuyed, class: "form-control" %>

  <%= f.label :started, "Был ли первый запуск котла*" %>
  <%= f.select :started, [['Да', true],['Нет', false]], { include_blank: true }, class: "form-control" %>

  <div id="hidden_div" style="display: none;">
    <%= f.label :whodidfirststart, "Кто делал запуск котла" %>
    <%= f.collection_select :whodidfirststart, Master.order(:name), :name , :name, { include_blank: true }, class: "form-control" %>

    <%= f.label :datefirststart, "Дата первого запуска котла" %>
    <%= f.text_field :datefirststart, class: "form-control" %>
  </div>
  <br /><%= f.submit @warranty.new_record? ? 'Создать' : 'Изменить' , class: "btn btn-primary" %>
<% end %>

<script>
$(function() {
  $("#warranty_phone").mask("+7(000)000-00-00", {
    placeholder: "+7(___)___-__-__",
    clearIfNotMatch: true
  });
    $('#warranty_datefirststart, #warranty_datebuyed').datepicker({
    format: "dd.mm.yyyy",
    todayBtn: "linked",
    language: "ru"
  });

  var hidden_div = $('#hidden_div')
  if ($('#warranty_started').val() == "true") {
    hidden_div.show();
  } else {
    hidden_div.hide();
  }
  document.getElementById('warranty_started').addEventListener('change', function () {
      var style = this.value == "true" ? 'block' : 'none';
      document.getElementById('hidden_div').style.display = style;
  });
});


</script>
