<div class="container">
  <div class="row">
    <div class="col-xs-5">

      <h2>Вызов №<%= @called.id %> <% if current_user.admin? %><%= link_to "",edit_admin_call_path(@called), class: 'fa fa-pencil-square-o', style: 'text-decoration:none' %> <% end %></h2>
      <table class="detail-view table table-striped table-condensed" id="yw0"><tr class="odd">
      <tr class="even"> <th> Имя: <%= @called.username %></th></tr>
      <tr class="odd"> <th> Котел: <%= @called.boiler %></th></tr>
      <tr class="even"> <th> Телефон: <%= @called.phone %></th></tr>
      <tr class="odd"> <th> Адрес: <%= @called.adress %></th></tr>
      <tr class="even"> <th> Неисправность: <%= @called.error %></th></tr>
      <tr class="odd"> <th> Дата звонка клиента: <%= @called.call_date.strftime("%d.%m.%Y") %></th></tr>
      <tr class="even"> <th> Дата создание записи: <%= @called.created_at.strftime("%d.%m.%Y %H:%M") %></th>
      <tr class="odd"> <th> Мастер: <%= if @called.master.blank? then "Неизвестен" else @called.master end %></th></tr>
      <tr class="even"><th>Гарантийный: <%= @called.guarantee  ? 'Да' : 'Нет' %></th></tr>
      <% if @called.guarantee? %>
        <tr class="odd"><th>Серия: <%= link_to @called.warranty.serial, warranty_path(@called.warranty) %></th></tr>
      <% end %>
      <tr class="even"> <th> Регистратор вызова: <%= @called.who_created %></th></tr>

      <tr class="odd button_choose"> <th>Статус:
      <% if current_user.admin? %>
          <%= button_to admin_call_path(@called), class: "btn btn-outline-danger", method: :put, params: {call: { status: "expect"}}, form_class: "form_inline", disabled: @called.status == "expect" do %>
          <span class='fa fa-hourglass-start fa-1x'></span>
          <% end %>
          <%= button_to admin_call_path(@called), class: "btn btn-outline-warning", method: :put, params: {call: { status: "in_progress"}}, form_class: "form_inline", disabled: @called.status == "in_progress" do %>
          <span class='fa fa-cog fa-1x'></span>
          <% end %>
          <%= button_to admin_call_path(@called), class: "btn btn-outline-secondary", method: :put, params: {call: { status: "canceled"}}, form_class: "form_inline", disabled: @called.status == "canceled" do %>
          <span class='fa fa-times fa-1x'></span>
          <% end %>
          <%= button_to admin_call_path(@called), class: "btn btn-outline-success", method: :put, params: {call: { status: "success"}}, form_class: "form_inline", disabled: @called.status == "success" do %>
          <span class='fa fa-check fa-1x'></span>
          <% end %>
      <% else %>
        <%= status_check(@called.status) %>
      <% end %>
      </th></tr>
      </table>

    </div>
  </div>
</div>
