h4 Редактирование пользователя
.row
  .col.s5
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      - render_errors_for(resource)
      .input-field
        i.material-icons.prefix
          | email
        = f.label :email
        = f.email_field :email, autofocus: true
      .input-field
        i.material-icons.prefix
          | account_circle
        = f.label :username
        = f.text_field :username
      .input-field
        i.material-icons.prefix
          | fiber_new
        = f.label :password, 'Новый пароль'
        = f.password_field :password, autocomplete: "off"
      .input-field
        i.material-icons.prefix
          | fiber_new
        = f.label :password_confirmation, 'Подтверждение нового пароля'
        = f.password_field :password_confirmation, autocomplete: "off"
      .input-field
        i.material-icons.prefix
          | vpn_key
        = f.label :current_password
        = f.password_field :current_password, autocomplete: "off"
      = f.button "Обновить", class: 'waves-effect waves-light btn'
