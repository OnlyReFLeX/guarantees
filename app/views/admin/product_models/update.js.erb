<% if @product_model.errors.present? %>
  <% @product_model.errors.full_messages.each do |message| %>
    M.toast({html: '<%= message %>', classes: 'red'})
  <% end %>
<% else %>
  $('#product_model_title_<%= @product_model.id %>').parents('tr').replaceWith('<%= j render 'admin/product_models/product_model', product_model: @product_model %>');
  $(".model-errors_<%= @product_model.id %>").remove()
<%end%>
