<% if @product_model.errors.present? %>
  $.smallBox({
    title : "Ошибка",
    content : "<i class='fa fa-times'></i> <i><%= @product_model.errors.full_messages.join('<br>') %></i>",
    color : "#C46A69",
    iconSmall : "fa fa-times fa-2x fadeInRight animated",
    timeout : 4000
  });
<% else %>
  $('#product_model_title_<%= @product_model.id %>').parents('tr').replaceWith('<%= j render 'admin/product_models/product_model', product_model: @product_model %>');
<%end%>
